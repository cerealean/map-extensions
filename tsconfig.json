{
    "compilerOptions": {
      "target": "es5", 
      "module": "commonjs", 
      "lib": [
        "esnext"
      ],
      "allowJs": true, 
      "declaration": true, 
      "outDir": "build", 
      "noLib": false,
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "examples",
      ".vscode",
      "src/**/*.spec.ts"
    ]
  }